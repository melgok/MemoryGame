@model IEnumerable<MemoryGame.Models.PlayerModel>

@{
    ViewData["Title"] = "Players";
}

<h2>Players</h2>

<table class="table">
    <thead>
        <tr>
            <th>Spelare</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var player in Model)
        {
            <tr>
                <td>@player.DisplayName</td>
                <td>
                    <a asp-action="EditPlayer" asp-route-id="@player.PlayerId" class="btn btn-primary">Redigera</a>
                    @* <a asp-action="Details" asp-route-id="@player.PlayerId" class="btn btn-info">Detaljer</a> *@
                    <a asp-action="DeletePlayer" asp-route-id="@player.PlayerId" class="btn btn-danger" 
                       onclick="return confirm('Är du säker på att du vill ta bort spelaren @player.DisplayName?')">Ta bort</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="AddPlayer" class="btn btn-success">Skapa ny spelare</a>
</p>